@model BlogMultisuarioApp.Models.Articulo

@{
    ViewData["Title"] = "Eliminar Artículo";
}

<div class="container mt-5">
    <h2 class="text-center text-danger mb-5">
        <i class="bi bi-trash"></i> Confirmar Eliminación
    </h2>

    <div class="alert alert-warning text-center">
        ¿Estás seguro que deseas eliminar el artículo <strong>"@Model.Titulo"</strong>?
        Esta acción no se puede deshacer.
    </div>

    <div class="card shadow-sm mb-5">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@(string.IsNullOrEmpty(Model.ImagenNombre)
                            ? "https://media.istockphoto.com/id/1409329028/es/vector/no-hay-imagen-disponible-marcador-de-posici%C3%B3n-miniatura-icono-dise%C3%B1o-de-ilustraci%C3%B3n.jpg?s=612x612&w=0&k=20&c=Bd89b8CBr-IXx9mBbTidc-wu_gtIj8Py_EMr3hGGaPw="
                            : $"https://blogmultisuariobucket.s3.amazonaws.com/{Model.ImagenNombre}")"
                     class="img-fluid rounded-start" alt="Imagen del Artículo" style="object-fit: cover; height: 180px; width: 100%;" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title fw-bold">@Model.Titulo</h5>
                    <p class="text-muted mb-1"><i class="bi bi-person"></i> Autor: @Model.Autor</p>
                    <p class="text-muted mb-2"><i class="bi bi-calendar"></i> Creado: @DateTime.Parse(Model.FechaCreacion).ToString("dd MMM yyyy")</p>
                    <p class="text-muted mb-2"><i class="bi bi-clock-history"></i> Última actualización: @DateTime.Parse(Model.FechaActualizacion).ToString("dd MMM yyyy HH:mm")</p>
                    <p class="card-text">@Model.Contenido</p>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ArticuloId" />
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="bi bi-trash-fill"></i> Eliminar
            </button>
            <a asp-action="AllUserArticles" class="btn btn-secondary btn-lg ms-2">
                <i class="bi bi-x-circle"></i> Cancelar
            </a>
        </div>
    </form>
</div>
