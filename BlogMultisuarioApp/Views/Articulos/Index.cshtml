@model IEnumerable<BlogMultisuarioApp.Models.Articulo>

@{
    ViewData["Title"] = "Explorar Artículos";
}

<style>
    .book {
        position: relative;
        border-radius: 15px;
        width: 100%;
        max-width: 350px;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transform-style: preserve-3d;
        perspective: 2000px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        overflow: hidden;
        margin: 15px;
        padding: 0;
        transition: transform 0.3s ease-in-out;
    }

        .book:hover {
            transform: translateY(-10px);
        }

    .cover {
        width: 100%;
        height: 200px;
        background-color: #f8f9fa;
        border-radius: 15px 15px 0 0;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

        .cover img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease-in-out;
        }

    .book:hover .cover img {
        transform: scale(1.05);
    }

    .content {
        padding: 15px;
        text-align: center;
        flex-grow: 1;
    }

        .content h6 {
            font-size: 1.2rem;
            color: #333;
        }

        .content p {
            font-size: 0.9rem;
            color: #666;
        }

        .content .btn {
            margin-top: 15px;
        }

    .card-text-truncated {
        max-height: 6rem;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .btn-outline-primary {
        border-radius: 50px;
        padding: 8px 20px;
    }
</style>

<div class="container mt-4">
    <div class="text-center mb-5">
        <h2 class="fw-bold me-2">
            <i class="bi bi-journal-richtext text-primary"></i> Explorar Artículos Públicos
        </h2>
        <p class="text-muted">Descubre lo que otros usuarios han compartido</p>
    </div>

    @if (!Model.Any(a => a.Estado == BlogMultisuarioApp.Models.Estado.Publicado))
    {
        <div class="alert alert-info text-center" role="alert">
            No hay artículos disponibles por ahora. ¡Vuelve más tarde!
        </div>
    }
    else
    {
        <div class="d-flex flex-wrap gap-4">
            @foreach (var articulo in Model.Where(a => a.Estado == BlogMultisuarioApp.Models.Estado.Publicado))
            {
                <div class="book">
                    <div class="cover">
                        <img src="@(string.IsNullOrEmpty(articulo.ImagenNombre)
                            ? "https://media.istockphoto.com/id/1409329028/es/vector/no-hay-imagen-disponible-marcador-de-posici%C3%B3n-miniatura-icono-dise%C3%B1o-de-ilustraci%C3%B3n.jpg?s=612x612&w=0&k=20&c=Bd89b8CBr-IXx9mBbTidc-wu_gtIj8Py_EMr3hGGaPw="
                            : $"https://blogmultisuariobucket.s3.amazonaws.com/{articulo.ImagenNombre}")"
                             alt="Imagen del artículo" />
                    </div>

                    <div class="content">
                        <h6 class="fw-bold text-primary">@articulo.Titulo</h6>
                        <p class="text-muted mb-1" style="font-size: 80%;">@articulo.Autor</p>
                        <div class="card-text-truncated mb-3">
                            @Html.Raw(articulo.Contenido.Length > 150 ? articulo.Contenido.Substring(0, 150) + "..." : articulo.Contenido)
                        </div>

                        <small class="text-muted">Publicado el @DateTime.Parse(articulo.FechaCreacion).ToString("dd MMM yyyy")</small><br />

                        <div class="mt-3">
                            <a class="btn btn-sm btn-outline-primary d-inline-flex align-items-center"
                               asp-action="Details"
                               asp-route-articuloId="@articulo.ArticuloId"
                               asp-route-userId="@articulo.UserId"
                               asp-route-returnTo="Index">
                                Continuar leyendo
                                <i class="bi bi-arrow-right-circle-fill ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
