@model BlogMultisuarioApp.Models.Articulo

@{
    ViewData["Title"] = "Editar Artículo";
}

<div class="container mt-5">
    <h2 class="text-center mb-5 text-warning">
        <i class="bi bi-pencil-square"></i> Editar Artículo
    </h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="card shadow-lg p-4 rounded-3">
        <input type="hidden" asp-for="ArticuloId" />

        <div class="mb-4">
            <label asp-for="Titulo" class="form-label fw-bold">Título del Artículo</label>
            <input asp-for="Titulo" class="form-control form-control-lg shadow-sm" placeholder="Modifica el título aquí..." />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Contenido" class="form-label fw-bold">Contenido del Artículo</label>
            <textarea asp-for="Contenido" class="form-control form-control-lg shadow-sm" rows="8" placeholder="Modifica el contenido aquí..."></textarea>
            <span asp-validation-for="Contenido" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label class="form-label fw-bold">Imagen del Artículo</label>
            <input type="file" name="imagen" class="form-control" />
        </div>

        <input type="hidden" asp-for="FechaCreacion" />
        <input type="hidden" asp-for="Autor" />

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-warning btn-lg px-4">
                <i class="bi bi-save"></i> Guardar Cambios
            </button>
            <a asp-action="AllUserArticles" class="btn btn-secondary btn-lg ms-2 px-4">
                <i class="bi bi-x-circle"></i> Cancelar
            </a>
        </div>
    </form>
</div>
