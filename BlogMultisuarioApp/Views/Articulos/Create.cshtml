@model BlogMultisuarioApp.Models.Articulo

@{
    ViewData["Title"] = "Crear Artículo";
}

<div class="container mt-5">
    <h2 class="text-center mb-5 text-success">
        <i class="bi bi-file-earmark-plus"></i> Crear Nuevo Artículo
    </h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data" class="card shadow-lg p-4 rounded-3">
        <div class="mb-4">
            <label asp-for="Titulo" class="form-label fw-bold">Título del Artículo</label>
            <input asp-for="Titulo" class="form-control form-control-lg shadow-sm" placeholder="Introduce el título aquí..." />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Contenido" class="form-label fw-bold">Contenido del Artículo</label>
            <textarea asp-for="Contenido" class="form-control form-control-lg shadow-sm" rows="8" placeholder="Escribe tu artículo aquí..."></textarea>
            <span asp-validation-for="Contenido" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label class="form-label fw-bold">Imagen del Artículo</label>
            <input type="file" name="imagen" class="form-control" />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-success btn-lg px-4">
                <i class="bi bi-check-circle"></i> Guardar
            </button>
            <a asp-action="AllUserArticles" class="btn btn-secondary btn-lg ms-2 px-4">
                <i class="bi bi-x-circle"></i> Cancelar
            </a>
        </div>
    </form>
</div>
