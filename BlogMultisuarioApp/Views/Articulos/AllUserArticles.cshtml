@model IEnumerable<BlogMultisuarioApp.Models.Articulo>

@{
    ViewData["Title"] = "Mis Artículos";
    string bucketUrl = "https://blogmultisuariobucket.s3.amazonaws.com/";
    string defaultImage = "https://media.istockphoto.com/id/1409329028/es/vector/no-hay-imagen-disponible-marcador-de-posici%C3%B3n-miniatura-icono-dise%C3%B1o-de-ilustraci%C3%B3n.jpg?s=612x612&w=0&k=20&c=Bd89b8CBr-IXx9mBbTidc-wu_gtIj8Py_EMr3hGGaPw=";
}

<style>
    .book {
        position: relative;
        border-radius: 15px;
        width: 100%;
        max-width: 350px;
        background-color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transform-style: preserve-3d;
        perspective: 2000px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        overflow: hidden;
        margin: 15px;
        padding: 0;
        transition: transform 0.3s ease-in-out;
    }

        .book:hover {
            transform: translateY(-10px);
        }

    .cover {
        width: 100%;
        height: 200px;
        background-color: #f8f9fa;
        border-radius: 15px 15px 0 0;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

        .cover img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease-in-out;
        }

    .book:hover .cover img {
        transform: scale(1.05);
    }

    .content {
        padding: 15px;
        text-align: center;
        flex-grow: 1;
    }

        .content h6 {
            font-size: 1.2rem;
            color: #333;
        }

        .content p {
            font-size: 0.9rem;
            color: #666;
        }

        .content .btn {
            margin-top: 15px;
        }

    .card-text-truncated {
        max-height: 6rem;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .button {
        position: relative;
        width: 185px;
        height: 40px;
        cursor: pointer;
        display: flex;
        align-items: center;
        border: 1px solid #34974d;
        background-color: #3aa856;
    }

    .button, .button__icon, .button__text {
        transition: all 0.3s;
    }

        .button .button__text {
            transform: translateX(30px);
            color: #fff;
            font-weight: 600;
        }

        .button .button__icon {
            position: absolute;
            transform: translateX(139px);
            height: 100%;
            width: 39px;
            background-color: #34974d;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .button .svg {
            width: 30px;
            stroke: #fff;
        }

        .button:hover {
            background: #34974d;
        }

            .button:hover .button__text {
                color: transparent;
            }

            .button:hover .button__icon {
                width: 178px;
                transform: translateX(0);
            }

        .button:active .button__icon {
            background-color: #2e8644;
        }

        .button:active {
            border: 1px solid #2e8644;
        }

</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-center w-100 text-primary">Mis Artículos</h2>
    </div>
    <div class="mb-3 text-center">
        <form asp-controller="Articulos" asp-action="Create" method="get">
            <button type="submit" class="button">
                <span class="button__text">Crear Artículo</span>
                <span class="button__icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" viewBox="0 0 24 24" stroke-width="2" stroke-linejoin="round" stroke-linecap="round" stroke="currentColor" height="24" fill="none" class="svg">
                        <line y2="19" y1="5" x2="12" x1="12"></line>
                        <line y2="12" y1="12" x2="19" x1="5"></line>
                    </svg>
                </span>
            </button>
        </form>
    </div>


    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            Aún no has creado ningún artículo. ¡Empieza escribiendo uno!
        </div>
    }
    else
    {
        <div class="d-flex flex-wrap gap-4">
            @foreach (var articulo in Model)
            {
                var imageUrl = string.IsNullOrEmpty(articulo.ImagenNombre)
                ? defaultImage
                : $"{bucketUrl}{articulo.ImagenNombre}";

                <div class="book">
                    <div class="cover">
                        <img src="@imageUrl" class="card-img-top" alt="Imagen del artículo" />
                    </div>

                    <div class="content">
                        <h6 class="fw-bold">@articulo.Titulo</h6>
                        <p class="text-muted mb-1" style="font-size: 80%;">Creado el: @DateTime.Parse(articulo.FechaCreacion).ToString("dd MMM yyyy")</p>
                        <div class="card-text-truncated mb-3">
                            @Html.Raw(articulo.Contenido.Length > 150 ? articulo.Contenido.Substring(0, 150) + "..." : articulo.Contenido)
                        </div>

                        <span class="badge bg-@(articulo.Estado == BlogMultisuarioApp.Models.Estado.Publicado ? "success" : "secondary")">
                            @articulo.Estado
                        </span>

                        <div class="mt-3">
                            <a class="btn btn-sm btn-outline-primary d-inline-flex align-items-center"
                               asp-action="Details"
                               asp-route-articuloId="@articulo.ArticuloId"
                               asp-route-userId="@articulo.UserId"
                               asp-route-returnTo="AllUserArticles">
                                Ver
                                <i class="bi bi-eye ms-1"></i>
                            </a>
                            <a class="btn btn-sm btn-outline-warning d-inline-flex align-items-center"
                               asp-action="Edit"
                               asp-route-articuloId="@articulo.ArticuloId">
                                Editar
                                <i class="bi bi-pencil-square ms-1"></i>
                            </a>
                            <a class="btn btn-sm btn-outline-danger d-inline-flex align-items-center"
                               asp-action="Delete"
                               asp-route-articuloId="@articulo.ArticuloId">
                                Eliminar
                                <i class="bi bi-trash ms-1"></i>
                            </a>

                            @if (articulo.Estado == BlogMultisuarioApp.Models.Estado.Borrador)
                            {
                                <form asp-controller="Articulos" asp-action="Publicar" asp-route-articuloId="@articulo.ArticuloId" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-success btn-sm" title="Publicar">
                                        <i class="bi bi-upload ms-1"></i> Publicar
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
